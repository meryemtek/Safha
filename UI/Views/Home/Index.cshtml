@model List<Entities.Book>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="home-content">
        <!-- Üst Arama Çubuğu -->
        <div class="top-search-bar">
            <div class="search-container">
                <form method="get" action="/Book/Search" class="search-form">
                    <input type="text" name="query" class="search-input" placeholder="Kitap adı, yazar veya ISBN ara..." required />
                    <button type="submit" class="search-button">
                        <i class="search-icon">🔍</i>
                    </button>
                </form>
            </div>
        </div>

        <!-- Gündem ve Kitap Alıntıları -->
        <div class="content-area">
            <div class="trending-section">
                <h2>📖 Gündemdeki Alıntılar</h2>
                <div class="quotes-grid">
                    <div class="quote-card">
                        <div class="quote-text">
                            "Kitaplar, insanın en iyi arkadaşıdır. Sessizdirler ama her zaman dinlerler."
                        </div>
                        <div class="quote-author">
                            <span class="book-title">Küçük Prens</span>
                            <span class="author-name">- Antoine de Saint-Exupéry</span>
                        </div>
                    </div>
                    
                    <div class="quote-card">
                        <div class="quote-text">
                            "Okumak, ruhun gıdasıdır. Her kitap yeni bir dünya açar."
                        </div>
                        <div class="quote-author">
                            <span class="book-title">Suç ve Ceza</span>
                            <span class="author-name">- Fyodor Dostoyevski</span>
                        </div>
                    </div>
                    
                    <div class="quote-card">
                        <div class="quote-text">
                            "Bilgi, güçtür. Okumak ise bu gücü elde etmenin en güzel yoludur."
                        </div>
                        <div class="quote-author">
                            <span class="book-title">1984</span>
                            <span class="author-name">- George Orwell</span>
                        </div>
                    </div>
                    
                    <div class="quote-card">
                        <div class="quote-text">
                            "Her kitap, yeni bir maceraya açılan kapıdır."
                        </div>
                        <div class="quote-author">
                            <span class="book-title">Hobbit</span>
                            <span class="author-name">- J.R.R. Tolkien</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="recent-activity">
                <h3>🕒 Son Aktiviteler</h3>
                <div class="activity-list">
                    <div class="activity-item">
                        <span class="activity-icon">📖</span>
                        <span class="activity-text">Yeni kitap eklendi: "Dönüşüm"</span>
                        <span class="activity-time">2 saat önce</span>
                    </div>
                    <div class="activity-item">
                        <span class="activity-icon">⭐</span>
                        <span class="activity-text">"Suç ve Ceza" kitabına 5 yıldız verildi</span>
                        <span class="activity-time">4 saat önce</span>
                    </div>
                    <div class="activity-item">
                        <span class="activity-icon">💬</span>
                        <span class="activity-text">"Küçük Prens" için yeni yorum eklendi</span>
                        <span class="activity-time">6 saat önce</span>
                    </div>
                </div>
            </div>
        </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

@section Scripts {
    <script src="~/js/home.js"></script>
}