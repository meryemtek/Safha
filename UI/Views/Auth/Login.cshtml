@model UI.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_Layout";
}

<div class="login-page">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h1>SAFHA</h1>
                <p>Satır Aralarında Saklananlar</p>
            </div>
            
            <div class="login-body">
                <h2>Giriş Yap</h2>
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Username">Kullanıcı Adı veya E-posta</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Password">Şifre</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-login">Giriş Yap</button>
                    </div>
                </form>
            </div>
            
            <div class="login-footer">
                <p>Hesabınız yok mu? <a asp-action="Register">Kayıt Ol</a></p>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .login-page {
        width: 100%;
        min-height: 100vh;
        background-image: url('/image/loginresim.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }
    
    .login-page::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1;
    }
    
    .login-container {
        width: 100%;
        max-width: 450px;
        padding: 20px;
        position: relative;
        z-index: 2;
    }
    
    .login-card {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        backdrop-filter: blur(10px);
    }
    
    .login-header {
        background-color: #86641f;
        color: white;
        padding: 30px;
        text-align: center;
    }
    
    .login-header h1 {
        margin: 0;
        font-size: 2.5rem;
        font-weight: bold;
        letter-spacing: 1px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }
    
    .login-header p {
        margin: 10px 0 0;
        font-size: 1.1rem;
        opacity: 0.9;
    }
    
    .login-body {
        padding: 30px;
    }
    
    .login-body h2 {
        margin: 0 0 25px;
        color: #86641f;
        font-size: 1.5rem;
        text-align: center;
        font-weight: 600;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #555;
        font-weight: 500;
    }
    
    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: rgba(255, 255, 255, 0.8);
    }
    
    .form-control:focus {
        border-color: #86641f;
        outline: none;
        box-shadow: 0 0 0 3px rgba(134, 100, 31, 0.2);
        background-color: #fff;
    }
    
    .form-check {
        margin-bottom: 25px;
        display: flex;
        align-items: center;
    }
    
    .form-check-input {
        margin-right: 8px;
    }
    
    .btn-login {
        display: block;
        width: 100%;
        padding: 14px;
        background-color: #86641f;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    
    .btn-login:hover {
        background-color: #6b4e18;
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(134, 100, 31, 0.3);
    }
    
    .login-footer {
        padding: 20px 30px;
        text-align: center;
        background-color: rgba(248, 248, 248, 0.8);
        border-top: 1px solid #eee;
    }
    
    .login-footer a {
        color: #86641f;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .login-footer a:hover {
        color: #6b4e18;
        text-decoration: underline;
    }
    
    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}